---
import "../styles/global.css";
import { ClientRouter } from 'astro:transitions';
import LeftSidebar from '../components/LeftSidebar.astro';
import RightSidebar from '../components/RightSidebar.astro';
import type { MarkdownHeading } from 'astro';

interface Props {
  title: string;
  headings?: MarkdownHeading[];
}

const { title, headings } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="RCI Developer Hub" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | RCI Developer Hub</title>
    <ClientRouter />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" rel="stylesheet" />
  </head>
  <body class="bg-[#F8F9FA] text-[#202124] font-sans antialiased min-h-screen flex flex-col">
    
    <!-- Top Bar -->
    <header class="bg-white border-b border-[#DADCE0] h-16 flex items-center px-6 fixed w-full top-0 z-50">
        <div class="font-condensed font-bold text-xl text-[#202124] flex items-center">
            <a href="/" class="flex items-center gap-2 decoration-0 text-inherit hover:text-inherit">
                <!-- RCI Logo / Brand -->
                <span class="text-[#ea1917]">RCI</span> Developer Hub
            </a>
        </div>
        <div class="ml-auto flex gap-8 text-[14px] font-medium text-[#5F6368]">
            <a href="/docs/01-getting-started" class="hover:text-[#202124] transition-colors">Docs</a>
            <a href="/download" class="hover:text-[#202124] transition-colors">Download</a>
            <a href="/changelog" class="hover:text-[#202124] transition-colors">Changelog</a>
        </div>
    </header>

    <div class="flex pt-16 min-h-screen">
      <!-- Left Sidebar (Fixed) -->
      <LeftSidebar />

      <!-- Main Content (Centered) -->
      <main class="flex-1 md:ml-[280px] xl:mr-[220px] w-full max-w-[calc(100vw-280px)] xl:max-w-[calc(100vw-500px)]">
        <div class="max-w-[800px] mx-auto px-8 py-10">
            <slot />
        </div>
      </main>

      <!-- Right Sidebar (Fixed, only if headings exist) -->
      {headings && headings.length > 0 && <RightSidebar headings={headings} />}
    </div>
  </body>
</html>
