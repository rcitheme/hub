---
import "../styles/global.css";
import { ClientRouter } from 'astro:transitions';
import LeftSidebar from '../components/LeftSidebar.astro';
import RightSidebar from '../components/RightSidebar.astro';
import type { MarkdownHeading } from 'astro';

interface Props {
  title: string;
  headings?: MarkdownHeading[];
}

const { title, headings } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="RCI Developer Hub" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | RCI Developer Hub</title>
    <ClientRouter />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" rel="stylesheet" />
  </head>
  <body class="bg-[#F8F9FA] text-[#202124] font-sans antialiased min-h-screen flex flex-col">
    
    <!-- Top Bar -->
    <header class="bg-white border-b border-[#DADCE0] h-16 flex items-center px-6 fixed w-full top-0 z-50">
        <div class="font-condensed font-bold text-xl text-[#202124] flex items-center">
            <a href="/" class="flex items-center gap-2 decoration-0 text-inherit hover:text-inherit">
                <img src="/rci-hammer-sickle-media-icon.svg" alt="RCI Logo" class="h-6 w-6" />
                <span><span class="text-[#ea1917]">RCI</span> Developer Hub</span>
            </a>
        </div>
        <div class="ml-auto flex gap-8 text-[14px] font-medium text-[#5F6368]">
            <a href="/docs/01-getting-started" class="hover:text-[#202124] transition-colors">Docs</a>
            <a href="/download" class="hover:text-[#202124] transition-colors">Download</a>
            <a href="/changelog" class="hover:text-[#202124] transition-colors">Changelog</a>
        </div>
    </header>

    <!-- Main Content Grid -->
    <div class="pt-16 max-w-[1440px] mx-auto grid grid-cols-[280px_1fr] xl:grid-cols-[280px_1fr_240px] min-h-screen border-x border-[#DADCE0] bg-white">
      
      <!-- Left Sidebar (Sticky) -->
      <aside class="bg-[#F8F9FA] border-r border-[#DADCE0] sticky top-16 self-start h-[calc(100vh-64px)] overflow-y-auto z-40 hidden md:block">
          <LeftSidebar />
      </aside>

      <!-- Main Content (Centered) -->
      <main class="col-start-2 col-end-3 min-w-0 bg-white">
        <!-- Inner container for constraints -->
        <div class="w-full max-w-[1000px] px-12 py-12">
            <slot />
        </div>
      </main>

      <!-- Right Sidebar (Fixed, only if headings exist) -->
      {headings && headings.length > 0 && (
        <aside class="fixed top-16 right-0 bottom-0 w-[240px] overflow-y-auto py-12 px-6 bg-white hidden xl:block">
            <RightSidebar headings={headings} />
        </aside>
      )}
    </div>
  </body>
</html>
