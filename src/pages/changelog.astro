---
import MainLayout from '../layouts/MainLayout.astro';

const changelog = [
  {
    date: "February 18, 2026",
    version: "v2.4.0",
    product: "RCI News Slider",
    changes: [
      "Updated author URI to marxist.com in plugin header.",
      "Fixed carousel responsiveness on mobile viewport < 375px.",
      "Added support for WEBP image formats in slide background."
    ]
  },
  {
    date: "February 10, 2026",
    version: "v2.1.0",
    product: "Lenin Theme",
    changes: [
      "Refined H1-H6 typography scaling in theme.json.",
      "Added 'Brand Accent' (#fef6f5) to color palette.",
      "Fixed navigation menu z-index issue on overlay."
    ]
  },
  {
    date: "January 12, 2026",
    version: "v1.0.0",
    product: "RCI Preheader",
    changes: [
      "Initial release.",
      "Implemented Priority Tree logic: Manual > Hub > Category.",
      "Added meta fields for custom label and custom URL."
    ]
  }
];
---

<MainLayout title="Changelog">
  <div class="max-w-[800px]">
    <h1 class="text-[40px] font-condensed font-bold text-[#202124] mb-12">Changelog</h1>
    
    <div class="relative border-l border-[#E0E0E0] ml-3 md:ml-6 space-y-12 pb-12">
      {changelog.map((entry) => (
        <div class="relative pl-8 md:pl-12">
          <!-- Timeline Dot -->
          <div class="absolute -left-[5px] top-2 w-[10px] h-[10px] rounded-full bg-[#ea1917] ring-4 ring-white"></div>
          
          <div class="mb-2">
            <span class="text-[14px] font-medium text-[#5F6368] block mb-1">{entry.date}</span>
            <div class="flex items-center gap-3">
                 <h2 class="text-[20px] font-bold text-[#202124]">{entry.product}</h2>
                 <span class="bg-[#e8f0fe] text-[#1967d2] text-[12px] font-bold px-2 py-0.5 rounded flex items-center">
                    {entry.version}
                 </span>
            </div>
          </div>

          <ul class="space-y-2 mt-4 list-disc list-outside ml-4 text-[#3C4043] text-[15px] leading-relaxed marker:text-[#9AA0A6]">
            {entry.changes.map(change => (
                <li>{change}</li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</MainLayout>
