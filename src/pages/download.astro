---
import MainLayout from '../layouts/MainLayout.astro';

// No data array needed for this exact clone, we'll hardcode the grid for precision control
---

<MainLayout title="Download">
  <div class="max-w-[1200px] pt-8 mx-auto">
    <h1 class="text-[60px] font-medium tracking-tight text-[#202124] mb-24 leading-[1.1]">
      Download RCI Components<br />
      for WordPress
    </h1>

    <!-- Top Full Width Divider -->
    <div class="border-t border-[#DADCE0] w-full"></div>

    <!-- Main Grid Section -->
    <div class="grid grid-cols-1 md:grid-cols-[200px_1fr] gap-x-12 py-20"> <!-- Increased Padding -->
      
      <!-- Label Column -->
      <div class="text-[20px] font-medium text-[#202124]">
        Select download
      </div>

      <!-- Content Grid -->
      <div class="grid grid-cols-1 md:grid-cols-3">
        
        <!-- Column 1: News Slider -->
        <div class="flex flex-col pr-8 border-r border-[#DADCE0]">
          <div class="flex items-center gap-3 mb-6">
             <!-- Thin Icon -->
             <span class="material-symbols-outlined text-[32px] text-[#202124]" style="font-variation-settings: 'wght' 200;">view_carousel</span>
             <h3 class="text-[20px] font-medium text-[#202124]">News Slider</h3>
          </div>
          
          <div class="mt-auto space-y-6">
            <div>
                <a href="#" class="flex items-center gap-2 text-[#202124] hover:text-[#ea1917] transition-colors py-1 group">
                <span class="material-symbols-outlined text-[20px] text-[#5F6368] group-hover:text-[#ea1917]">download</span>
                <span class="text-[14px]">Download v2.4.0</span>
                </a>
                <a href="#" class="flex items-center gap-2 text-[#202124] hover:text-[#ea1917] transition-colors py-1 group">
                <span class="material-symbols-outlined text-[20px] text-[#5F6368] group-hover:text-[#ea1917]">history</span>
                <span class="text-[14px]">View changelog</span>
                </a>
            </div>
            
            <div class="pt-6">
                <strong class="block text-[12px] font-bold text-[#202124] mb-1">Minimum Requirements</strong>
                <p class="text-[12px] text-[#5F6368] leading-relaxed">
                WordPress 6.4+<br/>PHP 8.0
                </p>
            </div>
          </div>
        </div>

        <!-- Column 2: Preheader -->
        <div class="flex flex-col px-8 border-r border-[#DADCE0]">
          <div class="flex items-center gap-3 mb-6">
             <span class="material-symbols-outlined text-[32px] text-[#202124]" style="font-variation-settings: 'wght' 200;">label</span>
             <h3 class="text-[20px] font-medium text-[#202124]">Preheader</h3>
          </div>
          
          <div class="mt-auto space-y-6">
            <div>
                <a href="#" class="flex items-center gap-2 text-[#202124] hover:text-[#ea1917] transition-colors py-1 group">
                <span class="material-symbols-outlined text-[20px] text-[#5F6368] group-hover:text-[#ea1917]">download</span>
                <span class="text-[14px]">Download v1.0.0</span>
                </a>
                <a href="#" class="flex items-center gap-2 text-[#202124] hover:text-[#ea1917] transition-colors py-1 group">
                <span class="material-symbols-outlined text-[20px] text-[#5F6368] group-hover:text-[#ea1917]">history</span>
                <span class="text-[14px]">View changelog</span>
                </a>
            </div>

            <div class="pt-6">
                <strong class="block text-[12px] font-bold text-[#202124] mb-1">Minimum Requirements</strong>
                <p class="text-[12px] text-[#5F6368] leading-relaxed">
                WordPress 6.0+
                </p>
            </div>
          </div>
        </div>

        <!-- Column 3: Lenin Theme -->
        <div class="flex flex-col pl-8"> <!-- No right border for last item -->
          <div class="flex items-center gap-3 mb-6">
             <span class="material-symbols-outlined text-[32px] text-[#202124]" style="font-variation-settings: 'wght' 200;">palette</span>
             <h3 class="text-[20px] font-medium text-[#202124]">Lenin Theme</h3>
          </div>
          
          <div class="mt-auto space-y-6">
            <div>
                <a href="#" class="flex items-center gap-2 text-[#202124] hover:text-[#ea1917] transition-colors py-1 group">
                <span class="material-symbols-outlined text-[20px] text-[#5F6368] group-hover:text-[#ea1917]">download</span>
                <span class="text-[14px]">Download v2.1.0</span>
                </a>
                <a href="#" class="flex items-center gap-2 text-[#202124] hover:text-[#ea1917] transition-colors py-1 group">
                <span class="material-symbols-outlined text-[20px] text-[#5F6368] group-hover:text-[#ea1917]">history</span>
                <span class="text-[14px]">View changelog</span>
                </a>
            </div>

            <div class="pt-6">
                <strong class="block text-[12px] font-bold text-[#202124] mb-1">Minimum Requirements</strong>
                <p class="text-[12px] text-[#5F6368] leading-relaxed">
                WordPress 6.6+ (FSE)
                </p>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</MainLayout>
